{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "C/C++: cl.exe build active file",
            "type": "shell",
            "command": "cl",
            "args": [
                "/EHsc",
                "/std:c++17", // Enable C++17
                "/I", "SFML-3.0.0/include",
                "${file}", // Passes the source file
                "/link",
                "/LIBPATH:SFML-3.0.0/lib",
                "sfml-graphics.lib",
                "sfml-window.lib",
                "sfml-system.lib"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}